<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">



<struts>

	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.devMode" value="false" />

	<!-- Configuration for the default package. -->
	<package name="default" extends="struts-default">

		<!-- interceptors>
			<interceptor-stack name="myStack">
				<interceptor-ref name="logger" />
				<interceptor-ref name="completeStack" />			
				<interceptor-ref name="execAndWait" />
				
			</interceptor-stack>
			
		</interceptors-->
		
		<action name="init" class="uploadAction" method="init">
			<result name="input">/WEB-INF/jsp/upload.jsp</result>
		</action>
		<action name="upload" class="uploadAction" method="upload" >
			<!-- interceptor-ref name="myStack"/-->
			<result name="success">/WEB-INF/jsp/view.jsp</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
			<result name="input">/WEB-INF/jsp/upload.jsp</result>
			<result name="override">/WEB-INF/jsp/override.jsp</result>
			<result name="wait">/WEB-INF/jsp/wait.jsp</result>
		</action>
		<action name="override" class="uploadAction" method="override" >
			<result name="success">/WEB-INF/jsp/view.jsp</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action>
	</package>
</struts>